{
	"name": "express-ecommerce-api",
	"version": "0.0.0",
	"description": "Express E-commerce API",
	"author": "Gustavo Morinaga <me@gustavomorinaga.dev>",
	"keywords": [
		"bcrypt",
		"esbuild",
		"eslint",
		"express",
		"jwt",
		"mongodb",
		"mongoose",
		"nodemailer",
		"pm2",
		"prettier",
		"swagger",
		"typescript",
		"zod"
	],
	"license": "MIT",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"scripts": {
